# ML Bootcamp - Environment Variables
# Copy this file to .env and customize the values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Secret Key - CHANGE THIS IN PRODUCTION!
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Database
DATABASE_URL=sqlite:///instance/bootcamp.db

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Application Settings
APP_NAME=ML Bootcamp
MAX_GUEST_USERS=1000
GUEST_SESSION_TIMEOUT=86400  # 24 hours in seconds

# Optional: Analytics and Tracking
ENABLE_ANALYTICS=False
GOOGLE_ANALYTICS_ID=

# Optional: Email Notifications (for future features)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=
